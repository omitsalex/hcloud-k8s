#cloud-config
users:
  - name: k8s
    groups: users, admin
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    ssh_authorized_keys:
{% for key in ssh_authorized_keys %}
      - {{ key }}
{% endfor %}
packages:
  - apt-transport-https
  - ca-certificates
  - curl
  - software-properties-common
  - python
  - python-yaml
  - iptables-persistent
  - gnupg-agent
runcmd:
  - curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -
  - curl -fsSL https://packages.cloud.google.com/apt/doc/apt-key.gpg | apt-key add -
  - curl -fsSL https://baltocdn.com/helm/signing.asc | sudo apt-key add -
  - add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu focal stable"
  - add-apt-repository "deb http://packages.cloud.google.com/apt/ kubernetes-xenial main"
  - add-apt-repository "deb https://baltocdn.com/helm/stable/debian/ all main"
  - apt update
  - swapoff -a
  - apt install -y docker-ce kubelet={{ kubenetes_version }}-00 kubeadm={{ kubenetes_version }}-00 kubectl={{ kubenetes_version }}-00 helm
  - apt-mark hold docker-ce kubelet kubeadm kubectl helm
  - usermod -aG docker k8s
  - sed -i -e '/^PermitRootLogin/s/^.*$/PermitRootLogin no/' /etc/ssh/sshd_config
  - sed -i -e '/^PasswordAuthentication/s/^.*$/PasswordAuthentication no/' /etc/ssh/sshd_config
  - sed -i -e '/^X11Forwarding/s/^.*$/X11Forwarding no/' /etc/ssh/sshd_config
  - sed -i -e '/^#MaxAuthTries/s/^.*$/MaxAuthTries 2/' /etc/ssh/sshd_config
  - sed -i -e '/^#AllowTcpForwarding/s/^.*$/AllowTcpForwarding no/' /etc/ssh/sshd_config
  - sed -i -e '/^#AllowAgentForwarding/s/^.*$/AllowAgentForwarding no/' /etc/ssh/sshd_config
  - sed -i -e '/^#AuthorizedKeysFile/s/^.*$/AuthorizedKeysFile .ssh/authorized_keys/' /etc/ssh/sshd_config
  - sed -i '$a AllowUsers k8s' /etc/ssh/sshd_config
  - touch /opt/ready.txt
  - reboot now
